@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<div class="px-0" id="colunaSideBar">
    <!-- MenuLateral -->
    <nav class="navbar navbar-expand-lg py-0">
        <div class="menu-lateral-fechado bgNav" id="menuBar">
            <!-- Abrir Menu -->
            <button id="abrirMenu" aria-label="abrir menu lateral" accesskey="v" title="Alt V"
                    class="estilo-setas btn-esquerda">
                <svg class="material-symbols-outlined" xmlns="http://www.w3.org/2000/svg" height="1.5rem" width="1.5rem">
                    <path d="M9.4 18 8 16.6l4.6-4.6L8 7.4 9.4 6l6 6Z" />
                </svg>
            </button>
            <!-- Fechar Menu -->
            <button id="fecharMenu" aria-label="fechar menu lateral" accesskey="c" title="Alt c"
                    class="d-none estilo-setas btn-direita">
                <svg class="material-symbols-outlined" xmlns="http://www.w3.org/2000/svg" height="1.5rem" width="1.5rem">
                    <path d="m14 18-6-6 6-6 1.4 1.4-4.6 4.6 4.6 4.6Z" />
                </svg>
            </button>
            <!-- Menu hamburguer -->
            <button id="abrirMenuHamburguer" class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Abrir menu">
                <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" height="39" width="39">
                    <path d="M4.875 29.25v-2.438h29.25v2.438Zm0-8.531v-2.438h29.25v2.438Zm0-8.531V9.75h29.25v2.438Z" />
                </svg>
            </button>
            <button id="fecharMenuHamburguer" class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Fechar menu">
                <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" height="39" width="39">
                    <path d="M4.875 29.25v-2.438h29.25v2.438Zm0-8.531v-2.438h29.25v2.438Zm0-8.531V9.75h29.25v2.438Z" />
                </svg>
            </button>

            <nav id="barra-lateral" class="sidenav">
                <div class="collapse navbar-collapse flex-lg-column" id="navbarSupportedContent">
                    <ul id="ul-raiz" class="list-inline hideMenu d-flex flex-column p-0 px-lg-3">
                        
                        <li id="li-brasao" class="d-none d-lg-block">
                            <img src="~/img/BRASAO_GOV_SP_Original.svg" width="40" height="47"
                                 alt="brasão do estado de São Paulo">
 <pre class="palavra">Secretaria 
da Fazenda 
e Planejamento</pre>
                        </li>

                        @*HOME*@
                        <li class="nav-item dropdown col-12" id="home">
                            <a aria-label="Home" class="nav-link item-menu" asp-area="" asp-controller="Home" asp-action="Index">
                                <span hidden aria-hidden="false">Home</span>
                                <svg class="material-symbols-outlined icone" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                     height="1.25rem" width="1.25rem">
                                    <path d="M6 19h3v-6h6v6h3v-9l-6-4.5L6 10Zm-2 2V9l8-6 8 6v12h-7v-6h-2v6Zm8-8.75Z" />
                                </svg>
                                <span class="palavra">Home</span>
                            </a>
                        </li>
                        @*PROJETOS*@
                        <li class="nav-item dropdown col-12" id="projetos">
                            <a aria-label="Projetos" class="nav-link item-menu" asp-area="" asp-controller="Projetos" asp-action="Index">
                                <span hidden aria-hidden="false">Lista de Projetos</span>
                                <svg class="material-symbols-outlined icone" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                     height="1.25rem" width="1.25rem">
                                    <path d="M3.5 17q-.625 0-1.062-.438Q2 16.125 2 15.5V10h1.5v5.5H11V17Zm3-3q-.625 0-1.062-.438Q5 13.125 5 12.5V7h1.5v5.5H14V14Zm3-3q-.625 0-1.062-.438Q8 10.125 8 9.5v-5q0-.625.438-1.062Q8.875 3 9.5 3h7q.625 0 1.062.438Q18 3.875 18 4.5v5q0 .625-.438 1.062Q17.125 11 16.5 11Zm0-1.5h7V6h-7v3.5Z" />
                                </svg>
                                <span class="palavra">Lista de Projetos</span>
                            </a>
                        </li>
                        @*PRIVACIDADE*@
                        <li class="nav-item dropdown col-12" id="privacidade">
                            <a aria-label="Privacidade" class="nav-link item-menu" asp-area="" asp-controller="Home" asp-action="Privacidade">
                                <span hidden aria-hidden="false">Privacidade</span>
                                <svg class="material-symbols-outlined icone" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                     height="1.25rem" width="1.25rem">
                                    <path d="M10 9.6c-.6 0-1 .4-1 1 0 .4.3.7.6.8l-.3 1.4h1.3l-.3-1.4c.4-.1.6-.4.6-.8.1-.6-.3-1-.9-1zm.1-4.3c-.7 0-1.4.5-1.4 1.2V8h2.7V6.5c-.1-.7-.6-1.2-1.3-1.2zM10 2L3 5v3c.1 4.4 2.9 8.3 7 9.9 4.1-1.6 6.9-5.5 7-9.9V5l-7-3zm4 11c0 .6-.4 1-1 1H7c-.6 0-1-.4-1-1V9c0-.6.4-1 1-1h.3V6.5C7.4 5.1 8.6 4 10 4c1.4 0 2.6 1.1 2.7 2.5V8h.3c.6 0 1 .4 1 1v4z" />
                                </svg>
                                <span class="palavra">Privacidade</span>
                            </a>
                        </li>

                        <li class="nav-item col-12">
                            <span class="palavra"></span>
                            </a>
                        </li>

                        <li class="nav-item col-12" id="configuracoes">
                            <br class="hr hr-menu-lateral-fechado">
                            <span class="palavra"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </nav>
    <!-- /MenuLateral -->
</div>
