<div id="itensNav" tabindex="0" class="list-unstyled components" role="navigation" aria-label="Main Navigation">
    <button class="botaoMenu" onclick="location.href='@Url.Action("Index", "Home")'" aria-label="Home">
        <i class="fas fa-home" aria-hidden="true"></i>
        <span>Home</span>
    </button>
    <button class="botaoMenu" onclick="location.href='@Url.Action("Index", "Projetos")'; _aguarde()" aria-label="Lista de Projetos">
        <i class="fas fa-table" aria-hidden="true"></i>
        <span>Formulário de Dados</span>
    </button>
    <button class="botaoMenu" onclick="location.href='@Url.Action("Privacidade", "Home")'" aria-label="Privacidade">
        <i class="fas fa-user-secret" aria-hidden="true"></i>
        <span>Privacidade</span>
    </button>
</div>

<div id="itensPopup" class="list-unstyled components" role="navigation" aria-label="Popup Navigation">
    <button class="botaoMenu" onclick="location.href='@Url.Action("Contato", "Home")'" aria-label="Contato">
        <i class="fas fa-mail-bulk" aria-hidden="true"></i>
        <span>Contato</span>
    </button>
    <button class="botaoMenu" onclick="location.href='@Url.Action("TesteIdentity", "Autenticacao")'; _aguarde()" aria-label="Teste do Identity">
        <i class="fas fa-id-card" aria-hidden="true"></i>
        <span>Teste do Identity</span>
    </button>
    <button class="botaoMenu" onclick="location.href='@Url.Action("Sobre", "Home")'; _aguarde()" aria-label="Sobre">
        <i class="fas fa-info-circle" aria-hidden="true"></i>
        <span>Sobre</span>
    </button>
    <button class="botaoMenu" onclick="location.href='@Url.Action("Acessibilidade", "Home")'; _aguarde()" aria-label="Dicas de acessibilidade">
        <i class="fas fa-universal-access" aria-hidden="true"></i>
        <span>Acessibilidade</span>
    </button>
    <li role="separator">
        <hr class="menuDivider" aria-orientation="horizontal">
    </li>
    @if (User.Identity.IsAuthenticated)
    {
        <button class="botaoMenu" onclick="location.href='@Url.Action("Entrar", "Autenticacao")'; _aguarde()" aria-label="Identificação">
            <i class="fas fa-address-card" aria-hidden="true"></i>
            <span>Identificação</span>
        </button>
        <button class="botaoMenu" onclick="location.href='@Url.Action("Sair", "Autenticacao")'; _aguarde()" aria-label="Sair">
            <i class="fas fa-door-open" aria-hidden="true"></i>
            <span>Sair</span>
        </button>
    }
    else
    {
        <button class="botaoMenu" onclick="location.href='@Url.Action("Entrar", "Autenticacao")'; _aguarde()" aria-label="Entrar">
            <i class="fas fa-address-card" aria-hidden="true"></i>
            <span>Entrar</span>
        </button>
    }
</div>
