<div id="itens_menu">
    <ul id="itens_nav" class="list-unstyled components">
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <em class="fas fa-home"></em>
                <span>Home</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Projetos" asp-action="Index" onclick="_aguarde()">
                <em class="fas fa-table"></em>
                <span>Lista de Projetos</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Privacidade">
                <em class="fas fa-user-secret"></em>
                <span>Privacidade</span>
            </a>
        </li>
    </ul>

    <ul id="itens_popup" class="list-unstyled components">
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Contato">
                <em class="fas fa-mail-bulk"></em>
                <span>Contato</span>
            </a>
        </li>

        <li>
            <a asp-area="" asp-controller="Autenticacao" asp-action="TesteIdentity" onclick="_aguarde()">
                <em class="fas fa-id-card"></em>
                <span>Teste do Identity</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Sobre" onclick="_aguarde()">
                <em class="fas fa-info-circle"></em>
                <span>Sobre</span>
            </a>
        </li>
        @if (User.Identity.IsAuthenticated)
        {
            <li>
                <a asp-area="" asp-controller="Autenticacao" asp-action="Identificacao" onclick="_aguarde()">
                    <em class="fas fa-address-card"></em>
                    <span>Identificação</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Autenticacao" asp-action="Sair" onclick="_aguarde()">
                    <em class="fas fa-door-open"></em>
                    <span>Sair</span>
                </a>
            </li>
        }
        else
        {
            <li>
                <a asp-area="" asp-controller="Autenticacao" asp-action="Entrar" onclick="_aguarde()">
                    <em class="fas fa-address-card"></em>
                    <span>Entrar</span>
                </a>
            </li>

        }
    </ul>
</div>
