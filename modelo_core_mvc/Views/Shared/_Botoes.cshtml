@model Tuple<string, string, string, string>

<div id="barraBotoes" class="form-group" role="group" aria-label="Barra de Botões">
    @if (!string.IsNullOrEmpty(Model.Item1))
    {
        <button type="submit" 
                class="btn btn-success mr-1" 
                title="Salvar"
                aria-live="polite"
                aria-label="Salvar">
            <i class='fas fa-save'></i>
            <span>@Model.Item1</span>
        </button>
    }
    @if (!string.IsNullOrEmpty(Model.Item2))
    {
        <button type="submit" 
                class="btn btn-danger mr-1"
                title="Excluir"
                aria-live="polite"
                aria-label="Excluir">
            <i class='fas fa-trash'></i>
            <span>@Model.Item2</span>
        </button>
    }
    @if (!string.IsNullOrEmpty(Model.Item3))
    {
        <button type="button" 
                class="btn btn-success mr-1"
                title="Alterar"
                aria-live="polite"
                aria-label="Alterar" 
                onclick="location.href='@Model.Item3'">
            <i class="fas fa-edit"></i>
            <span>Alterar</span>
        </button>
    }
    @if (!string.IsNullOrEmpty(Model.Item4))
    {
        <button type="button" 
                class="btn btn-cancel mr-1"
                title="Cancelar"
                aria-live="polite"
                aria-label="Cancelar" 
                onclick="location.href='@Url.Action("Index")'">
            <i class='fas fa-times'></i>
            <span>@Model.Item4</span>
        </button>
    }
</div>
