@model Tuple<string, string, string, string>

<div id="barraBotoes" class="form-group">
    @if (!string.IsNullOrEmpty(Model.Item1))
    {
        <button type="submit" class="btn btn-success mr-1">
            <i class='fas fa-save'></i>
            <span>@Model.Item1</span>
        </button>
    }
    @if (!string.IsNullOrEmpty(Model.Item2))
    {
        <button type="submit" class="btn btn-danger mr-1">
            <i class='fas fa-trash'></i>
            <span>@Model.Item2</span>
        </button>
    }
    @if (!string.IsNullOrEmpty(Model.Item3))
    {
        <a href="@Model.Item3" class="btn btn-success mr-1">
            <i class="fas fa-edit"></i>
            <span>Alterar</span>
        </a>
    }
    @if (!string.IsNullOrEmpty(Model.Item4))
    {
        <a asp-action="Index" class="btn btn-cancel mr-1">
            <i class='fas fa-times'></i>
            <span>@Model.Item4</span>
        </a>
    }
</div>
