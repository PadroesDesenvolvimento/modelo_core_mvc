@using Microsoft.AspNetCore.Authentication
@using Microsoft.Extensions.Configuration
@using SefazLib;
@using modelo_core_mvc.Models
@inject IConfiguration Configuration
@{
    var nomeExibicao = "Não Autenticado";

    if (User.Identity.IsAuthenticated)
    {
        nomeExibicao = @User.Identity.Name.Split(":")[0];

        var authenticationResult = await Context.AuthenticateAsync();
        var accessToken = authenticationResult.Properties.Items.FirstOrDefault(prop => prop.Key == ".Token.access_token").Value;
        if (!string.IsNullOrEmpty(accessToken))
        {
            IdentityConfig.jwtToken = accessToken;
        }
    }
    var iniciaisDoNome = Usuario.ObterIniciais(nomeExibicao);
    var iniciais = iniciaisDoNome.Length >= 2 ? iniciaisDoNome.Substring(0, 2) : iniciaisDoNome;
}

@Html.Hidden("nomeExibicao", nomeExibicao)

<partial name="_BarraAcessibilidade" />
<div id="tituloCabecalho">
    <div id ="fundoBrasaoMobile" class="fundoBrasao">
        <img class="brasao" src="https://devbsacdn.blob.core.windows.net/v01/img/BRASAO_GOV_SP_Original.svg" alt="Brasão do Estado de São Paulo">
    </div>
    <span id="tituloApp">Aplicação modelo .Net MVC</span>
    <div id="subtitulo">
        <span id="tituloSefaz">Secretaria da Fazenda e Planejamento</span>
        <span id="usuarioAutenticado">@nomeExibicao</span>
    </div>
    <i id="botaoPopup"
       alt="Menu Popup"
       title="Exibe e oculta o menu de ambiente"
       aria-label="Exibe e oculta o menu de ambiente"
       onclick="alternarClasse(['menuPopup'],'oculto',false)">
        <text id="iniciaisPopup">@iniciais</text>
    </i>
    <i id="botaoHamburguinho"
       class="fas fa-bars"
       alt="Menu Popup"
       aria-label="Exibe e oculta o Menu da aplicação"
       onclick="alternarClasse(['painelLateral', 'painelPrincipal'],'oculto',false)">
    </i>
</div>
