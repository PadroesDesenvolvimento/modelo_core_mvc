<div id="barraAcessibilidade" 
     class="d-flex p-1 justify-content-end" 
     role="navigation" 
     title="Barra de Acessibilidade"
     aria-label="Barra de Acessibilidade">
    <div id="atalhosDocumento" class="visually-hidden-focusable">
        <div>
            <a accesskey="p" href="#conteudo" aria-label="Conteúdo Principal (alt p)"></a>
            <a accesskey="m" href="#itensNav" aria-label="Menu lateral (alt m)"></a>
            <a accesskey="a" href="#botoesAcessibilidade" aria-label="Barra de acessibilidade (alt a)"></a>
        </div>
    </div>
    <div id="botoesAcessibilidade" class="ms-2 d-flex align-items-center">
        <button id="exibirLibras"
                class="rounded-circle d-flex align-items-center justify-content-center"
                role="button"
                aria-label="Abrir leitor de Libras  (Alt /)"
                title="Leitor Libras <alt />"
                accesskey="/"
                onclick="alternarClasse(['vlibras'],'enabled',false)">
        </button>
        <button id="aumentarLetra"
                class="botaoZoom rounded-circle d-flex align-items-center justify-content-center"
                role="button"
                aria-label="Aumentar caracteres (Alt +)"
                title="Zoom+ <alt +>"
                accesskey="+"
                onclick="aumentarCaracter()">
            <span>A+</span>
        </button>
        <button id="diminuirLetra"
                class="botaoZoom rounded-circle d-flex align-items-center justify-content-center"
                role="button"
                aria-label="Diminuir caracteres (Alt -)"
                title="Zoom- <alt ->"
                accesskey="-"
                onclick="diminuirCaracter()">
            <span>A-</span>
        </button>
        <button id="alternarContraste"
                class="rounded-circle d-flex align-items-center justify-content-center"
                role="button"
                aria-label="Alternar cores (Alt *)"
                title="Alternar cores <alt *>"
                accesskey="*"
                onclick="window.toggleContrast()">
            <svg xmlns="http://www.w3.org/2000/svg" height="10" viewBox="16.667 36.667 166.666 166.666" width="10">
                <path d="M100 203.333q-17.292 0-32.5-6.563t-26.458-17.812q-11.25-11.25-17.813-26.458T16.667 120q0-17.292 6.563-32.5t17.812-26.458q11.25-11.25 26.458-17.813t32.5-6.562q17.292 0 32.5 6.563t26.458 17.812q11.25 11.25 17.813 26.458t6.562 32.5q0 17.292-6.563 32.5t-17.812 26.458q-11.25 11.25-26.458 17.813t-32.5 6.562Zm4.167-12.5q28.542-2.083 47.604-22.083T170.833 120q0-28.75-19.063-48.75t-47.603-22.083v141.667Z" />
            </svg>
        </button>
    </div>
</div>
